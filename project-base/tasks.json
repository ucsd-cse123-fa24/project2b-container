{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
    },
    "tasks": [
        {
            "label": "Create PA2a terminals",
            "dependsOn": [
                "MininetPA2a",
                "SR",
            ],
            // Mark as the default build task so cmd/ctrl+shift+b will create them
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Create PA2b terminals",
            "dependsOn": [
                "Mininet",
                "SRs",
            ],
            // Mark as the default build task so cmd/ctrl+shift+b will create them
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            // The name that shows up in terminal tab
            "label": "Clean",
            // The task will launch a shell
            "type": "shell",
            "command": "/project-base/killall.sh; sudo mn -c; exit 0",
            // Set the shell type
            "options": {
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            // Mark as a background task to avoid the spinner animation on the terminal tab
            "isBackground": false,
            "problemMatcher": [],
        },
        {
            // The name that shows up in terminal tab
            "label": "POX",
            "dependsOn": [
                "Clean"
            ],
            // The task will launch a shell
            "type": "shell",
            "command": "cd /project-base && ./run_pox.sh",
            // Set the shell type
            "options": {
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            // Mark as a background task to avoid the spinner animation on the terminal tab
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^.*Listening on 0.0.0.0:6633",
                }
            },
        },
        {
            // The name that shows up in terminal tab
            "label": "POXPA2a",
